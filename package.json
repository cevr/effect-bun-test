{
  "name": "effect-bun-test",
  "version": "0.2.1",
  "description": "Effect testing utilities for Bun",
  "repository": {
    "type": "git",
    "url": "https://github.com/cevr/effect-bun-test.git"
  },
  "files": [
    "src",
    "src-v3",
    "tsconfig.json",
    "tsconfig.v3.json"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./v3": "./src-v3/index.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "gate": "concurrently -n type,lint,fmt,test -c blue,yellow,magenta,green \"bun run typecheck\" \"bun run lint\" \"bun run fmt\" \"bun run test\"",
    "prepare": "lefthook install || true && effect-language-service patch",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@effect/language-service": "^0.72.0",
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "effect": "4.0.0-beta.5",
    "effect-v3": "npm:effect@^3.19.15",
    "lefthook": "^2.0.15",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "bun": "*",
    "effect": ">=3.19.0"
  }
}
